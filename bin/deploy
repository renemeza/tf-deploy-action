#!/bin/sh

set -e

BASEDIR=$(dirname "$0")

INIT_OPTIONS=""
NO_COMMAND=0
PARAMS=""

parse_options() {
  while [ "$#" -gt 0 ]
  do
    case $1 in
      --init-options)
      INIT_OPTIONS="$2"
      shift 2
      ;;
      --no-command)
      NO_COMMAND=1
      shift
      ;;
      *)
      PARAMS="$PARAMS $1"
      shift
      ;;
    esac
  done
}

parse_options "$@"

set -- "$PARAMS"

export AWS_DEFAULT_REGION=${AWS_DEFAULT_REGION:-'us-east-1'}

cd "${TF_ACTION_WORKING_DIR:-.}"

rm -rf .terraform

PAYLOAD=$("$BASEDIR"/get_payload)

COMMAND=$(echo "$PAYLOAD" | jq -r '.command')

echo "Using init options '$INIT_OPTIONS' and options '$*'"

sh -c "${BASEDIR}/tf_command --command init $INIT_OPTIONS"

if [ "$COMMAND" = "null" ] || [ "$COMMAND" = "" ] || [ "$NO_COMMAND" = 1 ]; then
  sh -c "${BASEDIR}/tf_command --command apply -auto-approve $*"
else
  COMMAND_LENGTH=$(echo "$COMMAND" | jq --raw-input '. | split(" ")' | jq -r '. | length')

  if [ "$COMMAND_LENGTH" -eq 1 ]; then
    COMMAND="$COMMAND $*"
  fi

  echo "Running $COMMAND"

  sh -c "${BASEDIR}/tf_command --command $COMMAND"
fi
