#!/bin/sh

set -eu

BASEDIR=$(dirname "$0")

export AWS_DEFAULT_REGION=${AWS_DEFAULT_REGION:-'us-east-1'}

cd "${TF_ACTION_WORKING_DIR:-.}"

rm -rf .terraform

echo "#### Starting terraform init ####"

"$BASEDIR"/init "$TF_INIT_OPTIONS"

echo "#### Starting terraform apply ####"

"$BASEDIR"/apply "$TF_APPLY_OPTIONS"
